---
import "@styles/global.css";
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <Head />
  </head>
  <body class="body">
    <div class="content">
      <Header />
      <div class="grow flex flex-col w-full">
        <div class="grow flex flex-col">
          <slot />
        </div>
        <Footer />
      </div>
    </div>
  </body>
</html>

<style>
  @reference "@/styles/global.css";

  .body {
    @apply bg-background text-text relative min-h-screen;
  }
  .content {
    @apply relative z-10 flex min-h-screen flex-col items-center justify-center px-4;
  }
</style>
